<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mycompany.nncloudrestservice.model">
  <class name="Network" table="networks">
      <id name="id" type="int" column="id_network">
          <generator class="native"/>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="creation" column="creation" type="date"/>
      <set name="layers" cascade="all">
          <key column="id_network"/>
          <one-to-many class="Layer"/>
      </set>
  </class>
</hibernate-mapping>
