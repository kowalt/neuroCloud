<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mycompany.nncloudrestservice.model">
  <class name="Neuron" table="neurons">
      <id name="id" type="int">
          <column name="id_neuron" not-null="true"/>
          <generator class="native"/>
      </id>
      <list name="synapses" table="connections" inverse="true">
          <key>
              <column name="id_neuron" not-null="true"/>
          </key>
          <many-to-many class="Synapse">
              <column name="id_synapse" not-null="true" />
          </many-to-many>
      </list>
      <list name="activation_functions" table="activation_functions" cascade="all">
          <key>
              <column name="id_activation_function" not-null="true"/>
          </key>
          <one-to-many class="ActivationFunction"/>
      </list>
  </class>
</hibernate-mapping>
